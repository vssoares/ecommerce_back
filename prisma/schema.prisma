datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  id    Int     @default(autoincrement()) @id
  name  String
  email String  @unique 
  cpf String  @unique 
  sexo String  
  celular String  
  password String  
  enderecos Endereco[]
  carrinho Carrinho?
}

model Endereco {
  id Int  @id @default(autoincrement())
  cep String?
  rua String?
  numero String?
  complemento String?
  bairro String?
  cidade String?
  uf String?
  usuario    Usuario @relation(fields: [usuario_id], references: [id], onDelete: Cascade)
  usuario_id Int
}


model Carrinho {
  id       Int  @id @default(autoincrement())
  produtos ProdutosOnCarrinho[]
  valor_total Decimal?
  usuario   Usuario @relation(fields: [usuario_id], references: [id], onDelete: Cascade)
  usuario_id Int @unique 
}


model ProdutosOnCarrinho {
  carrinho   Carrinho @relation(fields: [carrinho_id], references: [id])
  carrinho_id Int 
  produto       Produto     @relation(fields: [produto_id], references: [id])
  produto_id     Int
  quantidade Int
  created_at DateTime? @default(now())
  updated_at String?
  @@id([carrinho_id, produto_id])
}

model Produto {
  id       Int  @id @default(autoincrement())
  nome String
  preco Decimal
  descricao String
  imagem String
  categorias CategoriasOnProdutos[]
  carrinhos ProdutosOnCarrinho[]
}


model CategoriasOnProdutos {
  categoria   Categoria @relation(fields: [categoria_id], references: [id])
  categoria_id Int 
  produto       Produto     @relation(fields: [produto_id], references: [id])
  produto_id     Int
  created_at DateTime? @default(now())
  updated_at String?
  @@id([categoria_id, produto_id])
}

model Categoria {
  id       Int  @id @default(autoincrement())
  nome String
  produtos CategoriasOnProdutos[]
}