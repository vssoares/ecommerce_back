datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @default(autoincrement()) @id
  name  String?
  email String  @unique 
  password String  
  reactions Reaction[]
  posts Post[]
}

model Post {
  id        Int      @default(autoincrement()) @id
  title     String
  content   String?
  author    User?    @relation(fields: [author_id], references: [id])
  author_id  Int?
  reactions Reaction[]
  created_at  DateTime @default(now())
}

model Reaction {
  id        Int      @default(autoincrement()) @id
  type String?
  post    Post?    @relation(fields: [post_id], references: [id])
  post_id  Int?
  user    User?    @relation(fields: [user_id], references: [id])
  user_id  Int?
}